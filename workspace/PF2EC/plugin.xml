<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension point="core.convertor">
      <convertor id="Q7 to Goal Model" 
      		class="PF2EC.PF2ECConvertor"
            input="pf" output="ec"/>
   </extension>
  <extension point="org.eclipse.ui.popupMenus">
	<objectContribution
		objectClass="org.eclipse.core.resources.IFile"
		nameFilter="*.pf"
		id="pf">
		<menu label="Convert PF into" path="additions" id="menu1">
			<separator name="group1"> </separator>
        </menu>
        <action
               class="PF2EC.PF2ECAction"
               icon="icons/pf.gif"
               id="EventCalculusAction"
               label="Event Calculus Model"
               menubarPath="menu1/group1"
               tooltip="Event Calculus model">
		</action>         
	</objectContribution>

   </extension>

</plugin>
