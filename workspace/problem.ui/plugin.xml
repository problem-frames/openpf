<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:uk.ac.open.problem.diagram.part.ProblemEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="pf"
            id="uk.ac.open.problem.Problem"
            name="Problem Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="uk.ac.open.problem.Problem.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.handler.ValidateActionHandler"
            commandId="uk.ac.open.problem.Problem.validate">
         <activeWhen>
            <reference
                    definitionId="uk.ac.open.problem.Problem.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="uk.ac.open.problem.Problem.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.core.editor.XtextEditor.languageName" 
                        value="uk.ac.open.problem.Problem" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.preferences.LanguageRootPreferencePage"
            id="uk.ac.open.problem.Problem"
            name="Problem"
            category="org.eclipse.xtext.languages">
            <keywordReference id="uk.ac.open.problem.ui.keyword_Problem"/>
        </page>
        <page
            category="uk.ac.open.problem.Problem"
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="uk.ac.open.problem.Problem.coloring"
            name="Syntax Coloring">
            <keywordReference id="uk.ac.open.problem.ui.keyword_Problem"/>
        </page>
        <page
            category="uk.ac.open.problem.Problem"
            class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.templates.XtextTemplatePreferencePage"
            id="uk.ac.open.problem.Problem.templates"
            name="Templates">
            <keywordReference id="uk.ac.open.problem.ui.keyword_Problem"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="uk.ac.open.problem.ui.keyword_Problem"
            label="Problem"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="uk.ac.open.problem.Problem.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
             <command
                 commandId="uk.ac.open.problem.Problem.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="uk.ac.open.problem.Problem.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="uk.ac.open.problem.ProblemExecutableExtensionFactory:org.eclipse.xtext.resource.XtextResourceFactory"
			type="pf">
		</parser>
	</extension>




</plugin>
